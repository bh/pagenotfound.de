{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard"
  ],
  "schedule": [
    "on Friday",
    "every weekend"
  ],
  "timezone": "Europe/Berlin",
  "ignoreDeps": ["esbuild"],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]

}
